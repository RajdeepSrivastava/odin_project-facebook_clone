<!DOCTYPE html>
<html>
  <head>
    <title>FacebookClone</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <nav>
      <ul>
        <% if user_signed_in? %>
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete, data: { turbo_frame: 'navbar', turbo_method: :delete } %></li>
        <% else %>
          <li><%= link_to 'Sign In', new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>

    <% if user_signed_in? %>
      <nav>
        <ul>
          <li>
            Notifications
            <ul>
              <% current_user.pending_friend_requests.each do |request| %>
                <li>
                  <%= request.sender.email %>
                  <%= link_to 'Accept', accept_friendship_path(request), method: :post, remote: true %>
                </li>
              <% end %>
            </ul>
          </li>
        </ul>
      </nav>
    <% end %>

    <%= yield %>
  </body>
</html>
