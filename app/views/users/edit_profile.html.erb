<h1>Edit Profile</h1>
<%= form_for @user, url: user_profile_path(@user), method: :patch, html: { multipart: true } do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  
  <%= form.label :bio %>
  <%= form.text_area :bio %>

  <%= form.label :profile_photo %>
  <%= form.file_field :profile_photo %>

  <%= form.submit "Save Changes" %>
<% end %>
