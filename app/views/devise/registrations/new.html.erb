<section class="vh-100" style="background-color: #eee;">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <h2 class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</h2>

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mx-1 mx-md-4" }) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>

                  <div class="input-group mb-4">
                    <span class="input-group-text"><i class="fas fa-user fa-lg me-3 fa-fw"></i></span>
                    <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", name: "user[email]", placeholder: "Email" %>
                  </div>

                  <div class="input-group mb-4">
                    <span class="input-group-text"><i class="fas fa-lock fa-lg me-3 fa-fw"></i></span>
                    <%= f.password_field :password, class: "form-control", autocomplete: "new-password", name: "user[password]", placeholder: "Password" %>
                  </div>

                  <div class="input-group mb-4">
                    <span class="input-group-text"><i class="fas fa-lock fa-lg me-3 fa-fw"></i></span>
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm Password" %>
                  </div>

                  <%= f.text_field :first_name, class: "form-control mb-4", placeholder: "First Name" %>
                  <%= f.text_field :last_name, class: "form-control mb-4", placeholder: "Last Name" %>
                  <%= f.date_field :dob, class: "form-control mb-4", placeholder: "Date of Birth" %>
                  <div class="input-group mb-4">
                    <span class="input-group-text"><i class="fas fa-camera fa-lg me-3 fa-fw"></i></span>
                    <div class="form-file">
                      <%= f.file_field :profile_photo, accept: 'image/*', class: "form-file-input", id: "profilePhoto" %>
                    </div>
                  </div>


                  <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <%= f.submit "Register", class: "btn btn-primary btn-lg" %>
                  </div>
                <% end %>

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp" class="img-fluid" alt="Sample image">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
